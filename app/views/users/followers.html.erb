<div class="flex flex-col gap-4">
  <h3 class="text-xl font-bold text-orange-500"><%= @user.username %>
    's Followers</h3>

  <div>
    <% @followers.each do |user| %>
      <div class="border-2 border-orange-300 rounded-lg p-4 mb-2">
        <%= render(user) %>
      </div>
    <% end %>
  </div>
</div>
