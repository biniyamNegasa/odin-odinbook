<div class="flex flex-col gap-4">
  <h3 class="text-xl font-bold text-orange-500">Users</h3>

  <div>
    <% if @users.empty? %>
      <p class="text-center text-gray-500">You are following everybody on OdinBook.</p>
    <% else %>
      <% @users.each do |user| %>
        <% unless user == current_user %>
          <div class="border-2 border-orange-300 rounded-lg p-4 mb-2">
            <%= render(user) %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
