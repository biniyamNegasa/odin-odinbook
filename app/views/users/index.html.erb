<div class="flex flex-col gap-4">
  <h3 class="text-xl font-bold text-orange-500">Users</h3>

  <div>
    <% @users.each do |user| %>
      <% unless user == current_user %>
        <div class="border-2 border-orange-300 rounded-lg p-4 mb-2">
          <%= render(user) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

