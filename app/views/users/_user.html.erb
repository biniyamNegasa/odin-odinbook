<div class="flex items-center gap-2">
  <%= link_to user.username,
  user,
  data: {
    turbo_frame: "_top",
  },
  class: " font-bold hover:underline hover:text-blue-700" %>
  <% if user != current_user %>
    <% if current_user.following?(user) %>
      <%= button_to unfollow_user_path(user), method: :delete do %>
        <%= inline_svg_tag "users/account-multiple-minus.svg",
        class: "w-6 h-6 hover:text-red-900" %>
      <% end %>
    <% else %>
      <%= button_to follow_user_path(user), method: :post do %>
        <%= inline_svg_tag "users/account-multiple-plus.svg",
        class: "w-6 h-6 hover:text-green-900" %>
      <% end %>
    <% end %>
  <% end %>
</div>
