<div class="border-2 border-orange-200 rounded-lg p-4 mb-2">
  <p>
    <%= render "users/user", user: comment.user %>
    <div class="text-gray-500">
      <%= time_ago_in_words comment.created_at %>
      ago
    </div>
    <div class="flex items-center justify-between">
      <%= comment.content %>
      <% if current_user == comment.user %>
        <div class="flex items-center">
          <%= link_to edit_post_comment_path(comment.post, comment) do %>
            <%= inline_svg_tag "posts/pen.svg",
            class: "w-5 h-5 text-blue-300 hover:text-blue-500" %>
          <% end %>
          <%= link_to post_comment_path(comment.post, comment), method: :delete,
    data: {
      turbo_method: :delete,
    } do %>
            <%= inline_svg_tag "posts/delete.svg",
            class: "w-5 h-5 text-red-300 hover:text-red-500" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </p>
</div>
