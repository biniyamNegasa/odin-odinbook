<h2 class="text-orange-500 font-bold text-3xl py-5">Edit
  <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col gap-3 pb-3">
    <div class="field">
      <%= f.label :username, class: "font-semibold text-lg" %><br/>
      <%= f.text_field :username,
                   autofocus: true,
                   autocomplete: "username",
                   class: "border-2 border-gray-200 rounded-lg" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "font-semibold text-lg" %><br/>
      <%= f.email_field :email,
                    autocomplete: "email",
                    class: "border-2 border-gray-200 rounded-lg" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for:
        <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "font-semibold text-lg" %>
      <i>(leave blank if you don't want to change it)</i><br/>
      <%= f.password_field :password,
                       autocomplete: "new-password",
                       class: "border-2 border-gray-200 rounded-lg" %>
      <% if @minimum_password_length %>
        <br/>
        <em><%= @minimum_password_length %>
          characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "font-semibold text-lg" %><br/>
      <%= f.password_field :password_confirmation,
                       autocomplete: "new-password",
                       class: "border-2 border-gray-200 rounded-lg" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "font-semibold text-lg" %>
      <i>(we need your current password to confirm your changes)</i><br/>
      <%= f.password_field :current_password,
                       autocomplete: "current-password",
                       class: "border-2 border-gray-200 rounded-lg" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update",
             class:
               "text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
  </div>
<% end %>

<h3 class="text-orange-500 font-bold text-xl py-5">Delete my account</h3>

<div>Unhappy?
  <%= button_to "Delete my account",
  registration_path(resource_name),
  data: {
    confirm: "Are you sure?",
    turbo_confirm: "Are you sure?",
  },
  method: :delete,
  class:
    "text-white bg-red-200 hover:bg-red-500 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %></div>

<%= link_to "Back",
:back,
class: "inline-block font-semibold underline hover:text-blue-700 mt-4" %>
