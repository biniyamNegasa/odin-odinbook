<h2 class="text-orange-500 font-bold text-3xl py-5">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col gap-3 pb-3">
    <div class="field">
      <%= f.label :username, class: "font-semibold text-lg" %><br/>
      <%= f.text_field :username,
                   autofocus: true,
                   autocomplete: "username",
                   class: "border-2 border-gray-200 rounded-lg" %>
    </div>
    <div class="field">
      <%= f.label :email, class: "font-semibold text-lg" %><br/>
      <%= f.email_field :email,
                    autocomplete: "email",
                    class: "border-2 border-gray-200 rounded-lg" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "font-semibold text-lg" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>
          characters minimum)</em>
      <% end %><br/>
      <%= f.password_field :password,
                       autocomplete: "new-password",
                       class: "border-2 border-gray-200 rounded-lg" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "font-semibold text-lg" %><br/>
      <%= f.password_field :password_confirmation,
                       autocomplete: "new-password",
                       class: "border-2 border-gray-200 rounded-lg" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",
             class:
               "text-white bg-blue-600 hover:bg-blue-700 cursor-pointer font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
