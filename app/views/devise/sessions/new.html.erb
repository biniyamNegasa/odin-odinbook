<h2 class="text-orange-500 font-bold text-3xl py-5">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex flex-col gap-3 pb-3">
    <div class="field">
      <%= f.label :email, class: "font-semibold text-lg" %><br/>
      <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    class: "border-2 border-gray-200 rounded-lg" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "font-semibold text-lg" %><br/>
      <%= f.password_field :password,
                       autocomplete: "current-password",
                       class: "border-2 border-gray-200 rounded-lg" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "rounded-lg" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Log in",
             class:
               "text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
