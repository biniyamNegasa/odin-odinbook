<h2 class="text-orange-500 font-bold text-3xl py-5">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col gap-3 pb-3">
    <div class="field">
      <%= f.label :email, class: "font-semibold text-lg" %><br/>
      <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    class: "border-2 border-gray-200 rounded-lg" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",
             class:
               "text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
