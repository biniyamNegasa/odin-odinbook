<%= render @post %>
<h3 class="text-xl font-bold text-orange-500">Comments</h3>
<turbo-frame id="comments_list">
  <% if @post.comments.any? %>
    <% @post.comments.each do |comment| %>
      <%= render "comments/comment", comment: comment %>
    <% end %>
  <% else %>
    <p>No comments yet. Be the first to comment!</p>
  <% end %>
</turbo-frame>

<div class="sticky bottom-0 bg-white p-4 rounded-lg">
  <turbo-frame id="comment_form">
    <%= button_to "Add a comment",
    new_post_comment_path(@post),
    method: :get,
    form: {
      data: {
        turbo_frame: "comment_form",
      },
    },
    class:
      "text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
  </turbo-frame>
</div>
