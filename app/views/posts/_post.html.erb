<div class="border-2 border-orange-300 rounded-lg p-4 mb-2">
  <div id="<%= dom_id post %>">
    <div class="flex justify-between items-start">
      <div>
        <%= render "users/user", user: post.user %>
        <div class="text-gray-500">
          <%= time_ago_in_words post.created_at %>
          ago
        </div>
      </div>
      <% if post.user == current_user %>
        <div class="relative inline-block text-left" data-controller="dropdown">
          <!-- Options Button -->
          <button data-action="click->dropdown#toggle">
            <%= inline_svg_tag "posts/dots-vertical.svg", class: "w-5 h-5 text-center" %>
          </button>
          <!-- Dropdown Menu -->
          <div
            data-dropdown-target="menu"
            class="
              hidden absolute right-0 z-20 mt-2 w-40 origin-top-right rounded-md bg-white
              shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none
            "
          >
            <div class="py-1">
              <%= link_to "Edit",
              edit_post_path(post),
              data: {
                turbo_frame: "_top",
              },
              class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= link_to "Delete",
              post_path(post),
              method: :delete,
              data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to delete this post?",
              },
              class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="flex justify-between items-center">
      <%= post.content %>
    </div>
    <div class="flex items-center gap-3">
      <div class="flex items-center gap-2 border-2 border-orange-300 rounded-lg p-2">
        <% if post.likes.find_by(user: current_user) %>
          <%= link_to post_likes_path(post), method: :delete, data: { turbo_method: :delete, } do %>
            <%= inline_svg_tag "posts/heart.svg", class: "w-5 h-5 text-red-600 " %>
          <% end %>
        <% else %>
          <%= link_to post_likes_path(post), method: :post, data: { turbo_method: :post, } do %>
            <%= inline_svg_tag "posts/heart.svg",
            class: "w-5 h-5 text-slate-300 hover:text-red-600" %>
          <% end %>
        <% end %>
        <%= post.likes.count %>
      </div>
      <%= link_to post, data: { turbo_frame: "_top" }, class: "font-bold hover:underline hover:text-blue-700" do %>
        <div class="flex items-center gap-2">
          <%= inline_svg_tag "posts/chat.svg", class: "w-5 h-5 text-blue-500 " %>
          <%= render partial: "posts/comment_count", locals: { post: post } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
